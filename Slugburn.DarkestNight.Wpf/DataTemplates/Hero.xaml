<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Slugburn.DarkestNight.Wpf.ViewModels">
    <DataTemplate DataType="{x:Type vm:Hero}">
        <StackPanel Width="175" Background="{Binding Highlight}">
            <StackPanel.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding SelectCommand}"></MouseBinding>
            </StackPanel.InputBindings>
            <Label Content="{Binding Name}" FontWeight="Bold" />
            <ContentControl Content="{Binding Status}" />
            <ItemsControl ItemsSource="{Binding Powers}" />
            <ItemsControl ItemsSource="{Binding Commands}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HeroStatus}">
        <StackPanel>
            <ContentControl Content="{Binding Grace}" />
            <ContentControl Content="{Binding Secrecy}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HeroValue}">
        <TextBlock>
            <TextBlock.Inlines>
                <Run Text="{Binding Name}" />
                <Run Text="{Binding Value}" />
                <Run >/</Run>
                <Run Text ="{Binding Default}" />
            </TextBlock.Inlines>
        </TextBlock>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type vm:HeroCommand}">
        <Button Content="{Binding Name}" Command="{Binding Command}" Margin="5" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HeroPowerVm}">
        <TextBlock Text="{Binding Name}" FontStyle="{Binding Style}" TextDecorations="{Binding Decorations}" ToolTip="{Binding Card}" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PrayerVm}">
        <Border Visibility="{Binding Visibility}" BorderThickness="2" Background="WhiteSmoke" Height="150" Width="200" BorderBrush="Black" >
            <StackPanel>
                <Label Content="Pray" FontWeight="Bold" HorizontalAlignment="Center" Padding="10" />
                <TextBlock HorizontalAlignment="Center">
                    <TextBlock.Inlines>
                        <Run FontWeight="Bold">Roll:</Run>
                        <Run Text="{Binding Roll}" />
                    </TextBlock.Inlines>
                </TextBlock>
                <TextBlock HorizontalAlignment="Center">
                    <TextBlock.Inlines>
                        <Run FontWeight="Bold">Grace Gained:</Run>
                        <Run Text="{Binding GraceGained}" />
                    </TextBlock.Inlines>
                </TextBlock>
                <Button Content="Continue" Command="{Binding Command}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" />
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>