<UserControl x:Class="Slugburn.DarkestNight.Wpf.Controls.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Slugburn.DarkestNight.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100" Cursor="SizeAll" >
    <Grid>
        <TextBlock Text="{Binding Name}" ToolTip="{Binding Text}" />
    </Grid>
</UserControl>
